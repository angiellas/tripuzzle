<table id="customers">
  <tr>
    <td>Order date:</td>
    <td>Ordered By</td>
    <td>Order status:</td>
  </tr>
  
  <tr>
    <td><%= @order.order_date %></td>
    <td><%= @order.user %></td>
    <td><%= @order.status %></td>
    
  </tr>
  
  <tr>
    <% if current_user.try(:admin?) %>
    <td><%= link_to 'Edit', edit_order_path(@order), :class =>"button" %></td>
    <% end %>
    <td><%= link_to 'Back', orders_path, :class =>"button" %></td>
        
  </tr>
  </table>

<h2>Order Items</h2>

 <table id="customers">
   <% @orderitems.each do |orderitem| %>
      <tr>
        <td><%= orderitem.created_at %></td>
        <td><%= orderitem.title %></td>
        <td><%= orderitem.order_id %></td>
      </tr>
      
      <tr>
        <td>
          <b>Total Price</b>
        </td>
      </tr>
      
      <tr>
        <td> <%= number_to_currency(orderitem.price * orderitem.quantity, :unit => "â‚¬") %> </td>
